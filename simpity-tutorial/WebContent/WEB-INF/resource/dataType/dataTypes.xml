<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<dataTypes xmlns="http://com.exilant.exility/schema">
  <dataTypes>
<!-- 
entityName yesNo trueFalse signedDecimal amt2 signedNumber maxValue id futureDate pastDate timeStamp
 -->
  	<textDataType name="price" 
  				  maxLength="20"
  				  messageName="invalidPrice"
  				  description="Price can have up to two decimal palces. Optionally you may specify the currency after the amount. Example '34.56 USD' "
  				  regex="^\d+(\.\d\d?)?(\sw*)?"
  				  />
  	<textDataType name="name" 
  				  maxLength="45" 
  				  messageName="invalidName"
  				  description="alphanumeric and these special characters"
  				  />
  	<textDataType name="shortName" 
  				  maxLength="20" 
  				  messageName="invalidName"
  				  description="20 alpha numeric characters"
  				  />
  	<textDataType name="longName" 
  				  maxLength="255" 
  				  messageName="invalidName"
  				  description="255 characters"
  				  />
  	<textDataType name="yn" 
  				  maxLength="1" 
  				  messageName="invalidYn"
  				  description="Y for true/yes N for false/No"
  				  regex="[01yYnN]"
  				  />
  	<integralDataType name="year"
  				  description="year between 1900 and 2020"
  					maxValue="2020"
  					minValue="1900" 
  					/>
  	<integralDataType name="shortNumber"
  				  description="number up to 999"
  					maxValue="999"
  					/>
  	<decimalDataType name="shortAmt"
  					maxValue="999.99"
  					numberOfDecimals="2"
  					description="amount less than a grand with two decimal places"
  					/>
  	<decimalDataType name="amt"
  					maxValue="99999.99"
  					numberOfDecimals="2"
  					description="amount less than 100,000 with two decimal places"
  					/>
  </dataTypes>
</dataTypes>