<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<record xmlns="http://com.exilant.exility/schema"
	name="film" 
	keyToBeGenerated="true" 
	recordType="storage" 
	tableName="film"
	description="attributes of film"
	>
	<fields>
		<field 
			columnName="film_id" 
			columnType="data" 
			dataType="id"
			defaultInputType="hiddenField" 
			label="filmId" 
			name="filmId"
			description="primary key"
		/>
		
		<field name="title"
			columnName="title" 
			columnType="data" 
			dataType="longName"
			defaultInputType="textInputField" 
			label="Title" 
			description="title of film"
		/>
		
		<field name="description"
			columnName="description" 
			columnType="data" 
			dataType="text"
			defaultInputType="textAreaField" 
			isNullable="true" 
			label="Description"
			description="description"
		/>
		
		<field 
			columnName="release_year" 
			columnType="data" 
			dataType="year"
			defaultInputType="textInputField" 
			label="Release Year"
			name="releaseYear"
			description="release year"
			/>
			
		<field name="languageId"
			columnName="language_id" 
			columnType="foreignKey" 
			referredField="languageId"
			referredRecord="film.language"
			defaultInputType="assistedInputField" 
			label="Language" 
			description="language of this film"
		>
			<pageFieldAttributes listServiceId="list.languages"/>
		</field>
		
		<field name="originalLanguageId"
			columnName="original_language_id" 
			columnType="foreignKey"
			referredField="languageId"
			referredRecord="film.language"
			defaultInputType="assistedInputField"
			isNullable="true" 
			label="Original Language" 
			description="original language"
			>
			<pageFieldAttributes listServiceId="list.language"/>
		</field>
		
		<field name="rentalDuration"
			columnName="rental_duration" 
			columnType="data"
			dataType="shortNumber" 
			defaultInputType="textInputField"
			label="Rental Duration" 
			description="max duration this is to be rented"
		/>
		
		<field name="rentalRate"
			columnName="rental_rate" 
			columnType="data" 
			dataType="shortAmt"
			defaultInputType="textInputField" 
			label="Rental Rate"
			description="rental rate" 
		/>
			
		<field name="length"
			columnName="length" 
			columnType="data" 
			dataType="shortNumber"
			defaultInputType="assistedInputField" 
			isNullable="true" 
			label="Length in minutes"
			description="length of the film in minutes"
		/>
		
		<field name="replacementCost"
			columnName="replacement_cost" 
			columnType="data" 
			dataType="amt"
			defaultInputType="textInputField" 
			label="Replacement Cost"
			description="replacement cost" 
		/>
		
		<field name="rating"
			columnName="rating" 
			columnType="data"
			dataType="shortName"
			valueList="G,PG,PG-13,R,NC-17" 
			defaultInputType="assistedInputField"
			isNullable="true" 
			label="Rating"
			description="rsting"
		/>

		<field name="specialFeatures"
			columnName="special_features" 
			columnType="data"
			dataType="shortName"
			valueList="Trailers,Commentaries,Deleted Scenes,Behind the Scenes"
			defaultInputType="assistedInputField" 
			isNullable="true" 
			label="Special Features"
			description="special features"
		/>
		
		<field name="lastUpdate"
			columnName="last_update" 
			columnType="modifiedTimeStamp" 
			dataType="timeStamp"
			defaultInputType="hiddenField" 
			label="lastUpdate" 
			description="time stamp"
		/>
	</fields>
</record>