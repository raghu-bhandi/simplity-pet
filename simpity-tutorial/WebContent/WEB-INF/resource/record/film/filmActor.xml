<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<record xmlns="http://com.exilant.exility/schema"
	name="filmActor" 
	recordType="storage"
	tableName="film_actor"
	description="actors in film"
	>
	<fields>
		<field name="filmId"
			columnName="film_id" 
			columnType="foreignKey" 
			referredField="filmId"
			referredRecord="film.film"
			defaultInputType="hiddenField" 
			label="filmId" 
			description="film"
		/>
		
		<field name="actorId"
			columnName="actor_id" 
			columnType="foreignKey" 
			referredField="actorId"
			referredRecord="film.actor"
			defaultInputType="assistedInputField" 
			label="Actor" 
			description="actor"
		>
			<pageFieldAttributes
				suggestionServiceId="sug.actors"
				suggestAfter="1"
			/>
		</field>
		
		<field name="lastUpdate"
			columnName="last_update" 
			columnType="modifiedTimeStamp"
			dataType="timeStamp"
			defaultInputType="hiddenField" 
			label="lastUpdate"
			description="time stamp"
		/>
	</fields>
</record>